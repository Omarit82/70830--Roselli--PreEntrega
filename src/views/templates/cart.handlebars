<h2 class="text-center"> Tu Carro: </h2>
<div class="d-flex justify-content-center">
       <div class="card borderCard m-3" style="width: 36rem;">
            <h3 class="text-center">Carro ID: {{cart._id}}</h3>
            {{#each cart.products}}
            <div class="card borderCard m-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{id_prod.title}}</h5>
                    <p class="card-text">Price: ${{id_prod.price}}</p>
                    <p class="card-text">Quantity: {{quantity}}</p>
                </div>
            </div>
            {{/each}}
        </div>
</div>